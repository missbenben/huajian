@using TS.Web.Models.Projects
@using TS.Core.Domain.Organizations
@model OrganizationType

@{
    Layout = "";
}

<!--头部-->
<div class="HJ-header">
    <div class="HJ-header-tabs clearfix">
        <div class="project-classification pull-left clearfix">
            <div class="name pull-left"><a href="@Url.Action("Login", "Customer")">数字化审图平台</a></div>
            <ul class="pull-left">
                <li class="manage-project"><a href="@Url.Action("ProjectIndex","Project",new { pageType = ProjectPageType.ManageredProject})">我管理的项目</a></li>
                @if (Model == OrganizationType.Censorship)
                {
                    <li class="reviewed-project"><a href="@Url.Action("ProjectList", "Project", new { pageType = ProjectPageType.CheckedProject })">我审查的项目</a></li>
                    <li class="review-project"><a href="@Url.Action("ProjectList", "Project", new { pageType = ProjectPageType.ReviewedProject })">我复核的项目</a></li>
                }
            </ul>
        </div>
        @Html.Action("GetUser", "Customer")
    </div>
</div>